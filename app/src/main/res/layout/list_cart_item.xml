<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="7dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="10">
            <androidx.cardview.widget.CardView
                android:background="@color/white"
                android:layout_weight="2"
                android:layout_width="wrap_content"
                android:layout_height="160dp">
                <ImageView
                    android:id="@+id/imgViewCartActivity"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_delete"
                    android:scaleType="centerCrop"/>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_weight="7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="15dp"
                android:weightSum="3"
                android:layout_marginStart="10dp">
                <TextView
                    android:id="@+id/txtNameCartActivity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Name : Jacket"
                    android:textSize="20dp"
                    android:layout_weight="1"
                    android:maxLines="2"
                    android:ellipsize="end"
                    tools:ignore="NestedWeights" />
                <TextView
                    android:id="@+id/txtQuantityCartActivity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Quantity : 100"
                    android:textSize="20dp"
                    android:maxLines="2"
                    android:layout_weight="1"
                    android:ellipsize="end"/>
                <TextView
                    android:id="@+id/txtPriceCartActivity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Price : 50$"
                    android:textSize="20dp"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:ellipsize="end"/>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="4"
                android:layout_marginEnd="5dp">
                <ImageButton
                    android:id="@+id/imgBtnDelCartActivity"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_delete"
                    android:background="@drawable/ripple_button"
                    android:backgroundTint="@color/white"
                    tools:ignore="NestedWeights" />
                <View
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_weight="2"/>
                <ImageButton
                    android:id="@+id/imgBtnEditCartActivity"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/ripple_button"
                    android:backgroundTint="@color/white"
                    android:src="@drawable/ic_edit"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>